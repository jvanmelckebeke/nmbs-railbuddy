<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eindwerk.Views.NoNetworkPage" BackgroundColor="#0A2039" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid x:Name="GrPage" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Grid.RowSpan="2" x:Name="ImNoConnection" VerticalOptions="CenterAndExpand"
                   HorizontalOptions="FillAndExpand"
                   Aspect="AspectFill" />
            <StackLayout Grid.Row="0">
                <Label Text="Whoops, no internet connection!"
                       FontSize="Title"
                       TextColor="White"
                       Margin="30"
                       HorizontalOptions="CenterAndExpand" />

                <Label Text="Please try again later" FontSize="Subtitle" TextColor="White" Margin="15"
                       HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>