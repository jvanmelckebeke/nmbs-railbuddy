             xmlns:local="clr-namespace:Eindwerk"
             x:Class="Eindwerk.Views.MainPage">
    <StackLayout>
        <!-- Place new controls here -->
        <Frame CornerRadius="100" HorizontalOptions="Center" Padding="0" IsClippedToBounds="True" HeightRequest="100"
               WidthRequest="100">
            <Image x:Name="ImgAvatar" VerticalOptions="Center" HorizontalOptions="Center" />
        </Frame>
        <Label x:Name="LblUser" HorizontalOptions="Center" Margin="10" Text="Hi, user!!" />
    </StackLayout>

</ContentPage>