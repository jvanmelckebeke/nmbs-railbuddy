<?xml version="1.0" encoding="utf-8"?>

<views:NetworkDependentPage xmlns="http://xamarin.com/schemas/2014/forms"
                            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                            xmlns:views="clr-namespace:Eindwerk.Views;assembly=Eindwerk"
                            x:Class="Eindwerk.Views.Tabs.ProfileTapPage" Title="Profile"
                            NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Margin="15">
            <Label x:Name="LblUser"
                   Text="Hi, user!"
                   HorizontalOptions="CenterAndExpand" FontSize="Large" />
            <Frame CornerRadius="100" HorizontalOptions="Center" Padding="0" Margin="0"
                   IsClippedToBounds="True"
                   HeightRequest="100"
                   WidthRequest="100">
                <Image x:Name="ImgAvatar" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="100"
                       Aspect="AspectFill"
                       HeightRequest="100" />
            </Frame>

            <Button x:Name="BtnLogout" BackgroundColor="{DynamicResource PrimaryColor}" TextColor="{DynamicResource PrimaryTextColor}"
                    Text="Logout" VerticalOptions="EndAndExpand" Margin="0, 12" />
        </StackLayout>
    </ContentPage.Content>
</views:NetworkDependentPage>